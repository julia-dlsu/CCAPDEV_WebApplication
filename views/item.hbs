<!-- header w/ navigation-->
{{> header }}

<div class="containter">
    <!-- breadcrumb -->
    <div class="row justify-content-center mt-3 p-2">
        <div class="col-sm-12 col-md-8">
            <nav style="--bs-breadcrumb-divider: '>';">
                <ol class="breadcrumb">
                    <i class="fad fa-warehouse-alt"></i>
                    <li class="breadcrumb-item"><a href="/">Current Inventory</a></li>
                    <li class="breadcrumb-item active">{{ item.name }}</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- page content: Item -->
    <div class="container shadow">
        <!-- modal button -->
        <div class="row justify-content-end py-2">
            <div class="col-2 text-end">
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#myModal"><i class="fas fa-edit"></i></button>
            </div>
        </div>
        <!-- item details -->
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-4 text-center">
                <img src="../images/items/{{ item.image }}" class="img-fluid" alt="{{ item.name }}">
            </div>
            <div class="col-sm-10 col-md-8 p-4">
                <h5 class="card-title mb-3">{{ item.name }}</h5>
                <h6 class="card-subtitle text-muted mb-4">{{ item.category }}</h6>
                <p class="card-text">{{ item.description }}</p>
                <p class="card-text text-muted qty">Quantity: {{ item.quantity }}</p>
            </div>
        </div>
    </div>

    <!-- modal for editing an item -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Edit Item</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
          
                <!-- Modal body -->
                <div class="modal-body p-4 pb-1">
                    <form>
                        <div class="row mb-2">
                            <div class="col-sm-4 col-lg-2">
                                <label for="img" class="form-label text-muted fw-light">Upload Image</label>
                            </div>
                            <div class="col-sm-8 col-lg-4">
                                <div style="overflow: hidden;">
                                    <input type="file" id="imgUpload" accept="image/*" id="pic" onchange = "return validPicture()">
                                </div>
                            </div>
                            <div class="col-sm-4 col-lg-2">
                                <label for="qty" class="form-label text-muted fw-light">Quantity</label>
                            </div>
                            <div class="col-sm-8 col-lg-4">
                                <input type="text" class="form-control" id="qty">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 col-lg-2">
                                <label for="img" class="form-label text-muted fw-light">Description</label>
                            </div>
                            <div class="col-sm-8 col-lg-4">
                                <input type="text" class="form-control" id="img">
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-4 col-lg-2">
                                <label for="img" class="form-label text-muted fw-light">Category</label>
                            </div>
                            <div class="col-sm-8 col-lg-4">
                                <input type="text" class="form-control" id="img">
                            </div>
                        </div>
                        <!-- modal footer -->
                        <div class="row justify-content-end mb-3">
                            <div class="col-sm-4 col-lg-2 text-end">
                                <input type = submit value = "Save Changes" class="btn btn-primary btn-sm">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>